<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fb"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_pic_of_vehicule"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vehicule_info"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_pic_of_vehicule"
        app:layout_constraintStart_toStartOf="@+id/iv_pic_of_vehicule"
        app:layout_constraintTop_toBottomOf="@+id/iv_pic_of_vehicule" />

    <Button
        android:id="@+id/btn_choose_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/choose_you_vehicule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_vehicule_info"
        app:layout_constraintStart_toStartOf="@+id/tv_vehicule_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_vehicule_info"
        app:layout_constraintVertical_bias="0.328" />

</androidx.constraintlayout.widget.ConstraintLayout>